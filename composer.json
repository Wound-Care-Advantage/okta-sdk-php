{
    "name": "okta/sdk",
    "description": "PHP Wrapper for the Okta API",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Brian Retterer",
            "email": "brian.retterer@okta.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "psr/http-message": "^1.0",
        "php-http/client-common": "^2.2",
        "php-http/httplug": "^2.2",
        "php-http/message": "^1.16",
        "php-http/discovery": "^1.19",
        "php-http/curl-client": "^2.2",
        "symfony/yaml": "^6.0",
        "nesbot/carbon": "^2.0",
        "laravel/framework": "^10.0",
        "guzzlehttp/psr7": "^1.7.0",
        "http-interop/http-factory-guzzle": "^1.0",
        "php-http/message-factory": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "3.*",
        "php-http/mock-client": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Okta\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --testsuite=Unit --colors=always",
        "test:integration": "phpunit --testsuite=Integration --colors=always",
        "rebuild-resources": [
            "@delete-resources",
            "@generate-resources",
            "@test",
            "@fix-code"
        ],
        "delete-resources": [
            "rm -rf ./src/Generated"
        ],
        "generate-resources": "cd ./openapi && npm run generator",
        "fix-code": "phpcbf ."
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
